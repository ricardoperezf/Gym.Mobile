<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymApp.Login">
    <StackLayout VerticalOptions="Center">

        <Image Source="iconoGym.png" WidthRequest="120" HeightRequest="120"></Image>
        <StackLayout  Margin="30">
            <Label Text="Usuario" HorizontalOptions="Center" FontSize="Medium"  MinimumWidthRequest="30"></Label>
            <Entry HorizontalTextAlignment="Center"  ></Entry>

            <Label Text="Contraseña" HorizontalOptions="Center" FontSize="Medium" MinimumWidthRequest="30"></Label>
            <Entry HorizontalTextAlignment="Center" ></Entry>

            <Button x:Name="btnIngresar"  Text="Ingresar" HorizontalOptions="Center"></Button>
        </StackLayout>


    </StackLayout>
</ContentPage>